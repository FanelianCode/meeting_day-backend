<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    # ✅ AGREGAR: Configuración PHP para evitar timeouts y desconexiones
    <IfModule mod_php.c>
        # Aumentar limites de memoria y tiempo
        php_value memory_limit 512M
        php_value max_execution_time 600
        php_value post_max_size 200M
        php_value upload_max_filesize 200M
        
        # ✅ CRÍTICO: Timeouts de socket y conexión
        php_value default_socket_timeout 3600
        php_value display_errors 0
        php_value log_errors 1
        
        # ✅ Para uploads grandes (imágenes base64)
        php_flag file_uploads On
        php_value max_input_time 600
        php_value max_input_vars 5000
    </IfModule>

    RewriteEngine On

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # ✅ IMPORTANTE: Excluir /api de redirecciones que corten conexión
    RewriteCond %{REQUEST_URI} !^/api/ [NC]
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

    # ✅ Headers para mantener conexión viva
    <IfModule mod_headers.c>
        Header set Connection "close"
        Header always unset Keep-Alive
    </IfModule>
</IfModule>

# ✅ AGREGAR: Compresión desactivada para API (evita cortes de conexión)
<IfModule mod_deflate.c>
    SetEnvIfNoCase Request_URI "/api/" no-gzip dont-vary
    SetEnvIfNoCase Request_URI "\.(?:gif|jpe?g|png|webp|mp4|zip|pdf)$" no-gzip dont-vary
</IfModule>
